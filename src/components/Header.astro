---
import { Image } from "astro:assets";
import HeaderButton from "./HeaderButton.astro";

import LogoWhite from "../images/LogoWhiteSpaceX.webp";
---

<header class="px-4 mx-auto lg:px-6 mt-8 mb-16">
  <div
    class="flex flex-col md:flex-row items-center justify-center mx-auto text-center mb-8"
  >
    <Image
      class="justify-self-end aspect-square w-72"
      src={LogoWhite}
      alt="Logo API SpaceX"
      loading="eager"
    />
    <div>
      <h2
        class="sm:text-left text-center text-5xl tracking-tight font-extrabold text-white"
      >
        Lanzamientos de SpaceX
      </h2>
      <p
        class="pt-4 sm:text-left text-center font-light text-gray-500 sm:text-xl dark:text-gray-400"
      >
        Toda la informacion sobre los lanzamientos de SpaceX
      </p>
    </div>
  </div>

  <nav
    class="flex flex-col items-center justify-between w-full text-center md:flex-row gap-4 mb-10"
  >
    <HeaderButton link="/">
      <svg
        slot="before"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-bolt"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          stroke="none"
          d="M0 0h24v24H0z"
          fill="none"
        ></path><path d="M13 3l0 7l6 0l-8 11l0 -7l-6 0l8 -11"></path>
      </svg>
      Ultimos Lanzamientos
    </HeaderButton>

    <HeaderButton link="/successfulLaunches">
      <svg
        slot="before"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-clover"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          stroke="none"
          d="M0 0h24v24H0z"
          fill="none"
        ></path><path
          d="M12 10l-3.397 -3.44a2.104 2.104 0 0 1 0 -2.95a2.04 2.04 0 0 1 2.912 0l.485 .39l.485 -.39a2.04 2.04 0 0 1 2.912 0a2.104 2.104 0 0 1 0 2.95l-3.397 3.44z"
        ></path><path
          d="M12 14l-3.397 3.44a2.104 2.104 0 0 0 0 2.95a2.04 2.04 0 0 0 2.912 0l.485 -.39l.485 .39a2.04 2.04 0 0 0 2.912 0a2.104 2.104 0 0 0 0 -2.95l-3.397 -3.44z"
        ></path><path
          d="M14 12l3.44 -3.397a2.104 2.104 0 0 1 2.95 0a2.04 2.04 0 0 1 0 2.912l-.39 .485l.39 .485a2.04 2.04 0 0 1 0 2.912a2.104 2.104 0 0 1 -2.95 0l-3.44 -3.397z"
        ></path><path
          d="M10 12l-3.44 -3.397a2.104 2.104 0 0 0 -2.95 0a2.04 2.04 0 0 0 0 2.912l.39 .485l-.39 .485a2.04 2.04 0 0 0 0 2.912a2.104 2.104 0 0 0 2.95 0l3.44 -3.397z"
        ></path>
      </svg>
      Lanzamientos Exitosos
    </HeaderButton>

    <HeaderButton link="/allLaunches">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-rocket"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          stroke="none"
          d="M0 0h24v24H0z"
          fill="none"
        ></path><path
          d="M4 13a8 8 0 0 1 7 7a6 6 0 0 0 3 -5a9 9 0 0 0 6 -8a3 3 0 0 0 -3 -3a9 9 0 0 0 -8 6a6 6 0 0 0 -5 3"
        ></path><path d="M7 14a6 6 0 0 0 -3 6a6 6 0 0 0 6 -3"></path><path
          d="M15 9m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path></svg
      >
      Todos los Lanzamientos
    </HeaderButton>

    <HeaderButton link="/about">
      <svg
        slot="before"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-info-circle"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          stroke="none"
          d="M0 0h24v24H0z"
          fill="none"
        ></path><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path><path
          d="M12 9h.01"></path><path d="M11 12h1v4h1"></path>
      </svg>
      Sobre la pagina
    </HeaderButton>
  </nav>
</header>
