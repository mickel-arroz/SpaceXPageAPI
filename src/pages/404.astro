---
import LayoutVacio from "../layouts/LayoutVacio.astro";
---

<LayoutVacio title="Error 404 Not Found">
  <div
    class="flex flex-col justify-center items-center m-auto min-h-screen min-w-full"
  >
    <h2 class="text-gray-400 text-2xl text-center mb-8">ERROR 404</h2>
    <h1 class="text-white text-4xl text-center mb-4">
      Esta pagina no existe...
    </h1>
    <img
      src="/SpaceX404.png"
      alt="Page not found"
      width="30%"
    />
  </div>
</LayoutVacio>
